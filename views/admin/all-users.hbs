<section>
  <div class="container">
    <div class="row mt-4">
     
    </div>
    <table class="table mt-5" id="allUsersTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">All users</th>
          <th scope="col">Mobile</th>
          <th scope="col">All orders</th>
          <th scope="col">Details</th>
       
         
        </tr>
      </thead>
      <tbody>
        {{#each allUsers}}
       <tr>
       <th scope="row">{{@index}}</th>
       <td>{{this.Name}}</td>
       <td>{{this.Mobile}}</td>
       <td>{{this.orderCount}}</td>
       <td>
        <a href="/admin/allUsers-Orders/{{this._id}}" class="btn btn-primary">
        view Orders
        </a>
       </td>
       </tr>
{{/each}}
      </tbody>
    </table>
  </div>
</section>

<script>
  $ (document).ready(function(){
    $("#allUsersTable").DataTable();
  })
   
</script>