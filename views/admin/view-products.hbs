<section>
  <div class="container">
    <div class="row mt-3">
      <a class="btn btn-primary ml-auto" href="/admin/add-products">
        Add products</a>
    </div>
    <table class="table mt-2" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
           <th scope="col">Quantity</th>
         <th scope="col">Orders</th>
          <th scope="col">Image</th> 
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.Name}}</td>
          <td>Rs:{{this.Price}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>
                {{#if (lt this.Quantity 1)}}
                        <p class="card-text" style="color: red;">Stock out</p>
                         {{else if (lt this.Quantity 2)}}
                        <p class="card-text" style="color: red;"> {{this.Quantity}}!</p>
                        {{else if (lt this.Quantity 9)}}
                        <p class="card-text" style="color: orange;"> {{this.Quantity}}!</p>
                         {{else }}
                        <p class="card-text" style="color: green; font-weight: 600;"> {{this.Quantity}}</p>
                        {{/if}}

          </td>
         <td>No.{{ordercount}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt="images"></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">Edit
            </a>
            <a href="/admin/delete-item/{{this._id}}" onclick="return confirm('Are you sure to delete {{this.Name}}')" class="btn btn-danger">
              Delete
            </a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>
<script>
$ (function(){
  $('#productsTable').DataTable();
})
</script>